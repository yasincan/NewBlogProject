@model IEnumerable<Category>

@{
    ViewBag.Title = "Kategoriler";
}
<h2>Category</h2>
<hr>
<p>
    @Html.ActionLink("Create New Category", "Create", null, htmlAttributes: new { @class = "btn btn-success" })
</p>
<table id="myTable" class="table table-striped table-bordered" style="width:100%">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.CategoryName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Description)
            </th>
            <th>Edit</th>
            <th>Details</th>
            <th>Delete</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @if (item.CategoryName != null && item.CategoryName.Length > 100)
                    {
                        @Html.DisplayFor(modelItem => item.CategoryName.Substring(0, 100))
                    }
                    else
                    {
                        @Html.DisplayFor(modelItem => item.CategoryName)
                    }
                </td>
                <td>
                    @if (item.Description != null && item.Description.Length > 100)
                    {
                        @Html.DisplayFor(modelItem => item.Description.Substring(0, 100))
                    }
                    else
                    {
                        @Html.DisplayFor(modelItem => item.Description)
                    }
                </td>
               
                <td>
                    @Html.ActionLink("Edit", "Edit", new { id = item.Id }, htmlAttributes: new { @class = "btn btn-primary" })
                </td>
                <td>
                    @Html.ActionLink("Details", "Details", new { id = item.Id }, htmlAttributes: new { @class = "btn btn-info" })
                </td>
                <td>
                    @Html.ActionLink("Delete", "Delete", new { id = item.Id }, htmlAttributes: new { @class = "btn btn-danger" })
                </td>
            </tr>
        }
    </tbody>
</table>


