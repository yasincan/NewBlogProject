@model Article
@using System.Text.RegularExpressions;
@{
    ViewBag.Title = @NewBlogProject.Globalization.Resource.Delete;
}

    <h2>@NewBlogProject.Globalization.Resource.Delete</h2>

    <h3>@NewBlogProject.Globalization.Resource.ArticleDeleteMessage</h3>
<div>
    <h4>@NewBlogProject.Globalization.Resource.Article</h4>
    <hr />
    <dl class="dl-horizontal">
        <dt>
            @Html.DisplayNameFor(model => model.Title)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Title)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.Text)
        </dt>

        <dd>
            @Html.Raw(Regex.Replace(Model.Text, @"<[^>]*>", ""))
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.Description)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Description)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.IsActive)
        </dt>

        <dd>
            @if (Model.IsActive == true)
            {
                <i class="fa fa-check-circle" style="color:green;font-size:16px;"></i><span class="text-danger">@Html.DisplayName(@NewBlogProject.Globalization.Resource.Active)</span>

            }
            else
            {
                <i class="fa fa-times-circle" style="color:red;font-size:16px;"></i><span class="text-danger">@Html.DisplayName(@NewBlogProject.Globalization.Resource.Passive)</span>
            }
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.CreatedDate)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.CreatedDate)
        </dd>

    </dl>

    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()

        <div class="form-actions no-color">
            <input type="submit" value="@NewBlogProject.Globalization.Resource.Delete" class="btn btn-danger" /> |
            @Html.ActionLink(@NewBlogProject.Globalization.Resource.BacktoList, "Index")
        </div>
    }
</div>
